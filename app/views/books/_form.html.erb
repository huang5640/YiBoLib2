<div class="row">
  <div class="col-md-6 col-md-offset-1">

 <%= form_for book, html: {class: "form-horizontal"} do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="form-group">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-offset-2 col-sm-10">
    <% if book.image %>
      <%= image_tag book.image %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :图片链接, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :image, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :书名, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :作者, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :简介, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ISBN码, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :ISBN, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :益博码, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :YiBoNum, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">确认</button>
        </div>
  </div>
<% end %>

  </div>
</div>
