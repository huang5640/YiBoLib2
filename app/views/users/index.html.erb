<p id="notice"><%= notice %></p>

<h1>用户列表</h1>

<table>
  <thead>
    <tr>
      <th>益博ID</th>
      <th>名字</th>
      <th>身份证号</th>
      <th>住址</th>
      <th>借阅权限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.YiBoID %></td>
        <td><%= user.name %></td>
        <td><%= user.GovID %></td>
        <td><%= user.address %></td>
        <td><%= user.AuthNum %></td>
        <td><%= link_to '详细', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <td><%= link_to '删除用户', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

